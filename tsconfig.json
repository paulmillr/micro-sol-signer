{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "bundler",
    "outDir": ".",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}