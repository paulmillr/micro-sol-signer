{
  "name": "micro-sol-signer",
  "version": "0.8.2",
  "description": "Create, sign & decode Solana transactions with minimum deps",
  "files": [
    "*.js",
    "*.d.ts",
    "*.map",
    "idl",
    "src"
  ],
  "dependencies": {
    "@noble/curves": "^2.0.0",
    "@noble/hashes": "^2.0.0",
    "@scure/base": "^2.0.0",
    "micro-packed": "^0.8.0"
  },
  "devDependencies": {
    "@paulmillr/jsbt": "0.4.4",
    "@types/node": "24.2.1",
    "micro-ftch": "0.4.3",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -f *.{js,d.ts,js.map,d.ts,d.ts.map}; rm -rf idl",
    "build:release": "npx --no @paulmillr/jsbt esbuild test/build",
    "format": "prettier --write src",
    "test": "node --experimental-strip-types --no-warnings test/index.ts",
    "test:bun": "bun test/index.ts",
    "test:deno": "deno --allow-env --allow-read test/index.ts"
  },
  "exports": {
    ".": "./index.js",
    "./hint.js": "./hint.js",
    "./net.js": "./net.js",
    "./offchain.js": "./offchain.js",
    "./idl.js": "./idl/index.js"
  },
  "keywords": [
    "solana",
    "sol",
    "web3",
    "sign",
    "signer",
    "tx",
    "transaction",
    "address",
    "token"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulmillr/micro-sol-signer.git"
  },
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "author": "Paul Miller (https://paulmillr.com)",
  "license": "MIT"
}
